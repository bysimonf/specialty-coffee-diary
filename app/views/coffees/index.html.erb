<div class="d-flex justify-content-between mb-3">
  <h2 class="ms-2">Coffees:</h2>
  <div>
    <% if user_signed_in? %>
      <%= link_to "Add coffee", new_coffee_path, class: "btn-primary-cta" %>
    <% end %>
  </div>
</div>

<%= render "coffees/search_form" %>


<div class="cards mt-3">
  <% @coffees.each do |coffee| %>
    <%= render "coffees/preview_card_coffee", coffee: coffee %>
  <% end %>
</div>
